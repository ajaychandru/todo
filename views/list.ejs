<%- include('header'); -%>
    <div id="heading" class="box">
      
        <h1>
            <%=title%>
        </h1>
      
    </div>
    <div class="box">

        <% newItemArray.forEach(item=>{ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checked" value=<%= item._id %> onChange="this.form.submit()">
                    <p>
                        <%=item.name%>
                    </p>
                </div>
                <input type="hidden" name="deleteItem" value=<%=title%>>
            </form>
        
       <% }) %>
          

           


            <form id="toDo-form" class="item" method="post" action="/">
                <input id="new-item" type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button id="my-button" type="submit" name="button" value= <%=title%>>+</button>
            </form>

    </div>
    <%- include('footer'); -%>